    <!--查询所有类别信息供导航栏使用-->
    <select id="selectAllToNav" resultMap="CategoryNavResultMap">
    SELECT a.cat_id parentId,a.cat_name parentName,b.cat_id childId,b.cat_name childName
    FROM category a
    LEFT JOIN category b
    ON a.cat_id=b.precat_id
    where a.is_parent = 1
